{
  "name": "next-content",
  "version": "0.1.0-beta",
  "description": "A Content manager for Next.js framework",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rm -rf dist && npm run build:code && npm run build:types && npm run format && npm run clean:map",
    "build:types": "tsc --emitDeclarationOnly --declaration --declarationDir dist",
    "build:code": "swc src -s -d dist && prettier --write dist",
    "clean:map": "rm -rf dist/**/*.map && rm -rf dist/*.map",
    "test": "jest",
    "format": "prettier --write {dist,src}",
    "watch": "swc src -d dist -w"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/healthpackdev/next-content.git"
  },
  "keywords": [
    "next-content",
    "mdx",
    "next",
    "content-manager",
    "git-based"
  ],
  "author": "Yasin Kadir Kılıç",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/healthpackdev/next-content/issues"
  },
  "homepage": "https://github.com/healthpack/next-content#readme",
  "dependencies": {
    "@mdx-js/mdx": "^1.6.22",
    "@mdx-js/react": "^1.6.22",
    "@swc/core": "^1.2.66",
    "fast-glob": "^3.2.7",
    "flexsearch": "^0.7.2",
    "gray-matter": "^4.0.3"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.46",
    "@swc/jest": "^0.1.4",
    "@types/jest": "^26.0.24",
    "@types/mdx-js__react": "^1.5.4",
    "@types/node": "^16.4.1",
    "@types/react": "^17.0.15",
    "chokidar": "^3.5.2",
    "jest": "^27.0.6",
    "prettier": "^2.3.2",
    "react-test-renderer": "^17.0.2",
    "typescript": "^4.3.5",
    "unified": "^10.0.1"
  },
  "peerDependencies": {
    "next": "10.0.0>=",
    "react": "16>=",
    "react-dom": "16>="
  }
}
